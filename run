#!/bin/bash
mvn install

cd generator/
java -jar generator.jar -out sample.mesh -m irregular -np 2000
cd ../

cd island/
java -jar island.jar -i ../generator/sample.mesh -o island.mesh --mode random --aquifers 11 --lakes 4 --cities 8
cd ../

cd visualizer/
java -jar visualizer.jar -in ../island/island.mesh -out sample.svg
cd ../
